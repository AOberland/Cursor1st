<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".MainActivity">

    <!-- Camera Preview -->
    <androidx.camera.view.PreviewView
        android:id="@+id/previewView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/controlPanel"
        app:scaleType="fillCenter" />

    <!-- Coverage Overlay -->
    <LinearLayout
        android:id="@+id/coverageOverlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/overlay_background"
        android:orientation="vertical"
        android:padding="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Coverage"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

        <ProgressBar
            android:id="@+id/progressCoverage"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:max="100"
            android:progress="0"
            android:progressTint="@android:color/holo_green_light" />

        <TextView
            android:id="@+id/tvCoveragePercent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"
            android:text="0%"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Movement Indicators -->
    <LinearLayout
        android:id="@+id/movementOverlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/overlay_background"
        android:orientation="vertical"
        android:padding="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Movement"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvMovementX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="X: 0.0"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvMovementY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Y: 0.0"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvRotation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rot: 0.0Â°"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <View
            android:id="@+id/indicatorStability"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:background="@drawable/stability_indicator"
            android:backgroundTint="@android:color/holo_red_light" />

    </LinearLayout>

    <!-- Guidance Indicator -->
    <ImageView
        android:id="@+id/guidanceArrow"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="32dp"
        android:src="@drawable/ic_arrow_up"
        android:tint="@android:color/white"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/controlPanel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Captured Images Count -->
    <TextView
        android:id="@+id/tvCapturedCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/overlay_background"
        android:padding="8dp"
        android:text="Captured: 0"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/controlPanel"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Control Panel -->
    <LinearLayout
        android:id="@+id/controlPanel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/control_panel_background"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Main Controls Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <!-- Start/Stop Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnStartStop"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="2"
                android:text="Start Scanning"
                android:textAllCaps="false"
                app:backgroundTint="@android:color/holo_green_dark"
                app:cornerRadius="8dp"
                app:icon="@drawable/ic_play_arrow"
                app:iconGravity="textStart" />

            <!-- Manual Capture Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCapture"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginHorizontal="4dp"
                app:backgroundTint="@android:color/holo_blue_dark"
                app:cornerRadius="28dp"
                app:icon="@drawable/ic_camera"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconSize="24dp" />

            <!-- Flashlight Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnFlashlight"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginStart="4dp"
                app:backgroundTint="@android:color/darker_gray"
                app:cornerRadius="28dp"
                app:icon="@drawable/ic_flashlight"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconSize="24dp" />

        </LinearLayout>

        <!-- Secondary Controls Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:orientation="horizontal">

            <!-- Reset Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnReset"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:text="Reset"
                android:textAllCaps="false"
                app:backgroundTint="@android:color/holo_orange_dark"
                app:cornerRadius="6dp"
                app:icon="@drawable/ic_refresh"
                app:iconGravity="textStart"
                app:iconSize="18dp" />

            <!-- View Results Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnViewResults"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:text="View Results"
                android:textAllCaps="false"
                app:backgroundTint="@android:color/holo_purple"
                app:cornerRadius="6dp"
                app:icon="@drawable/ic_view_list"
                app:iconGravity="textStart"
                app:iconSize="18dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>